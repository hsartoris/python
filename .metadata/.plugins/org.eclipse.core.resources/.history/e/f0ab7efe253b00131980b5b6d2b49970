import parse_url

max_links = -1

if __name__ == "__main__":
    url = raw_input("Please enter a URL: ")
    links = []
    if url.startswith("http://"):
        links = parse_url.get_links(url)
    else:
        links = parse_url.get_links("http://" + url)
    
    output = []
    
    for link in links:
        output.append(link)
    
    for link in links:
        output.append(parse_url.get_links(link, max_links)
        
    