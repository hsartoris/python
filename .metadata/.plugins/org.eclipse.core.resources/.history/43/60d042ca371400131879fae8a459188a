import math

jupiterDist = 483632000.0
earthDist = 92957100.0
jupiterDiam = 88846.0
earthDiam = 7926.0
speedOfLight = 186000

ratioDist = jupiterDist / earthDist

print "Ratio of Distance: " + repr(ratioDist)

jupiterVolume = (4.0/3) * math.pi * ((jupiterDiam/2) ^ 3.0)
earthVolume = (4.0/3) * math.pi * ((earthDiam/2) ^ 3)

ratioVolume = jupiterVolume/earthVolume

print "Ratio of Volume: " + ratioVolume

jupiterTime = jupiterDist / speedOfLight
earthTime = earthDist / speedOfLight

jupiterMinutes = jupiterTime % 60
jupiterSeconds = jupiterTime - (jupiterMinutes * 60)
earthMinutes = earthTime % 60
earthSeconds = earthTime - (earthMinutes * 60)

print "Time to Earth: " + earthMinutes + "m " + earthSeconds + "s"
print "Time to Jupiter: " + jupiterMinutes + "m " + jupiterSeconds + "s"


